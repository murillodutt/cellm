{
  "name": "cellm",
  "version": "1.1.0",
  "description": "Spec-Driven Development System for AI Agents - Optimized for Nuxt 4 stack",
  "homepage": "https://cellm.ai",
  "repository": {
    "type": "git",
    "url": "https://github.com/murillodutt/cellm.git"
  },
  "bugs": {
    "url": "https://github.com/murillodutt/cellm/issues"
  },
  "author": "Murillo Dutt <dev@cellm.ai> (https://duttyeshua.tech)",
  "contributors": [
    "Nuxt Team <hello@nuxt.com> (https://nuxt.com)",
    "Claude Opus 4.5 <noreply@anthropic.com> (https://anthropic.com)"
  ],
  "license": "MIT",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:validation": "vitest run tests/validation",
    "test:integration": "vitest run tests/integration",
    "validate": "./scripts/validate.sh",
    "lint:md": "markdownlint 'cellm-core/**/*.md' --ignore cellm-core/templates",
    "lint:md:fix": "markdownlint 'cellm-core/**/*.md' --ignore cellm-core/templates --fix",
    "prepare": "husky",
    "precommit": "./scripts/validate.sh && npm run lint:md && npm test"
  },
  "lint-staged": {
    "cellm-core/**/*.md": [
      "markdownlint --fix"
    ]
  },
  "keywords": [
    "claude",
    "llm",
    "spec-driven-development",
    "ai-agents",
    "nuxt",
    "vue",
    "ai-development",
    "cellm"
  ],
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.17",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "glob": "^13.0.0",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.47.0",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
