{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cellm.dev/schemas/rule.schema.json",
  "title": "CELLM Rule Schema",
  "description": "Schema para validação de arquivos de rule (cellm-core/rules/)",
  "type": "object",
  "required": ["id"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[A-Z][A-Z0-9-]*[0-9]{3}$",
      "description": "Identificador único da rule (ex: CONV-001, LIM-001, DOM-FE-001)"
    },
    "version": {
      "type": "string",
      "pattern": "^v[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Versão semântica (ex: v1.0.0)",
      "default": "v0.10.0"
    },
    "status": {
      "type": "string",
      "enum": ["OK", "DRAFT", "REVISAR", "OBSOLETO"],
      "description": "Status da rule",
      "default": "OK"
    },
    "budget": {
      "type": "string",
      "pattern": "^~[0-9]+( tokens)?$",
      "description": "Estimativa de tokens (ex: ~150 tokens)"
    },
    "alwaysApply": {
      "type": "boolean",
      "description": "Se true, a rule é sempre carregada. Usado para rules core.",
      "default": false
    },
    "paths": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "Padrões glob que ativam esta rule (para rules domain)"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true,
      "description": "Tags para categorização"
    }
  },
  "oneOf": [
    {
      "properties": {
        "alwaysApply": { "const": true }
      },
      "required": ["alwaysApply"]
    },
    {
      "properties": {
        "paths": { "minItems": 1 }
      },
      "required": ["paths"]
    }
  ],
  "examples": [
    {
      "id": "CONV-001",
      "alwaysApply": true
    },
    {
      "id": "LIM-001",
      "alwaysApply": true
    },
    {
      "id": "DOM-FE-001",
      "paths": ["app/**"]
    },
    {
      "id": "DOM-BE-001",
      "paths": ["server/**"]
    }
  ]
}
