{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cellm.dev/schemas/pattern.schema.json",
  "title": "CELLM Pattern Schema",
  "description": "Schema para validação de arquivos de pattern (cellm-core/patterns/)",
  "type": "object",
  "required": ["id"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[A-Z][A-Z0-9]+-INDEX$|^[A-Z][A-Z0-9]+-[0-9]{3}$",
      "description": "Identificador único do pattern (ex: TS-INDEX, ANTI-001, VU-001)"
    },
    "version": {
      "type": "string",
      "pattern": "^v[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Versão semântica (ex: v1.0.0)",
      "default": "v0.10.0"
    },
    "status": {
      "type": "string",
      "enum": ["OK", "DRAFT", "REVISAR", "OBSOLETO"],
      "description": "Status do pattern",
      "default": "OK"
    },
    "budget": {
      "type": "string",
      "pattern": "^~[0-9]+( tokens)?$",
      "description": "Estimativa de tokens (ex: ~200 tokens)"
    },
    "alwaysApply": {
      "type": "boolean",
      "description": "Se true, o pattern é sempre carregado (para índices e anti-patterns)",
      "default": false
    },
    "severity": {
      "type": "string",
      "enum": ["critical", "warning", "info"],
      "description": "Severidade do pattern (para anti-patterns)",
      "default": "info"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true,
      "description": "Tags para categorização (ex: typescript, types)"
    },
    "paths": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "Padrões glob que ativam este pattern"
    }
  },
  "examples": [
    {
      "id": "TS-INDEX",
      "tags": ["typescript", "types"]
    },
    {
      "id": "PATTERNS-INDEX",
      "alwaysApply": true
    },
    {
      "id": "ANTI-INDEX",
      "severity": "critical",
      "alwaysApply": true
    },
    {
      "id": "VU-001",
      "tags": ["vue", "composition-api"],
      "paths": ["app/**/*.vue"]
    }
  ]
}
